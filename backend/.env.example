# =================================
# POS SYSTEM BACKEND CONFIGURATION
# =================================

# Environment
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:4200

# Database Configuration
DATABASE_URL=postgresql://pos_user:pos_password@localhost:5432/pos_system
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=pos_user
DB_PASSWORD=pos_password
DB_NAME=pos_system
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false
DB_CONNECTION_LIMIT=20
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000
DB_LOGGING=false
DB_MAX_QUERY_TIME=1000
DB_TIMEZONE=UTC

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000
REDIS_RETRY_DELAY=100
REDIS_MAX_RETRIES=3
REDIS_KEEP_ALIVE=30000
REDIS_KEY_PREFIX=pos:

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_ITEMS=1000

# Logging Configuration
LOG_LEVEL=info
ENABLE_DOCS=true

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=POS System <noreply@possystem.com>

# Push Notifications (Optional)
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# Payment Gateway Configuration (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Analytics & Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=your-sentry-dsn

# Security
SESSION_SECRET=your-session-secret-key
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# Sync Configuration
SYNC_INTERVAL=30000
SYNC_BATCH_SIZE=100
SYNC_RETRY_ATTEMPTS=3
SYNC_CONFLICT_RESOLUTION=server_wins

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=2000

# Printer Configuration
PRINTER_TIMEOUT=5000
PRINTER_RETRY_ATTEMPTS=3

# Business Configuration
DEFAULT_CURRENCY=USD
DEFAULT_CURRENCY_SYMBOL=$
DEFAULT_TAX_RATE=0.08
DEFAULT_SERVICE_RATE=0.15
DEFAULT_TIMEZONE=UTC
DEFAULT_LANGUAGE=en

# Feature Flags
ENABLE_KIOSK=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_OFFLINE_MODE=true
ENABLE_MULTI_LOCATION=false

# Development Tools
ENABLE_PLAYGROUND=false
ENABLE_INTROSPECTION=false
DEBUG_MODE=false

# Health Check
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Performance
ENABLE_COMPRESSION=true
ENABLE_ETAG=true
ENABLE_QUERY_CACHE=true
QUERY_CACHE_TTL=300000

# Webhooks
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=5000

# Third-party Integrations
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number